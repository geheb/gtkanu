[Unit]
Description=GT Kanu

[Service]
WorkingDirectory=/opt/gtkanu/
ExecStart=/opt/gtkanu/GtKanu.WebApp --urls http://localhost:5000
Restart=always
RestartSec=60
KillSignal=SIGINT
SyslogIdentifier=gtkanu
User=gtkanu
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=DOTNET_CLI_TELEMETRY_OPTOUT=1

[Install]
WantedBy=multi-user.target
